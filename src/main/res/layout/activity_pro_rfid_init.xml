    <LinearLayout
        android:id="@+id/ll_choice"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EDECEC"
        android:orientation="vertical"
        android:paddingBottom="5dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#2fa4e7"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="8dp"
                android:src="@drawable/tb_icon_actionbar_back" />

            <TextView
                android:id="@+id/tv_top_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center"
                android:text="RFID卡初始化"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/iv_pro_up_shelf_more"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="8dp"
                android:src="@drawable/tb_icon_actionbar_more" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:gravity="left"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pro_rfid_init_read_card_add"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@color/chocolate"
                android:gravity="center"
                android:padding="10dp"
                android:text="读卡"
                android:textColor="@color/tv_White" />

            <TextView
                android:id="@+id/tv_pro_rfid_init_remove_card"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@color/blue_good"
                android:gravity="center"
                android:padding="10dp"
                android:text="删除"
                android:textColor="@color/tv_White" />

            <TextView
                android:id="@+id/tv_pro_rfid_init_save_card"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@color/chocolate"
                android:gravity="center"
                android:padding="10dp"
                android:text="保存"
                android:textColor="@color/tv_White" />

            <TextView
                android:id="@+id/tv_pro_rfid_init_update_card"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@color/blue_good"
                android:gravity="center"
                android:padding="10dp"
                android:text="修改"
                android:textColor="@color/tv_White" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp">

            <TextView
                android:id="@+id/tv_bqh"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="标签号:"
                android:textColor="@color/blue"
                android:layout_marginLeft="20dp"
                android:textSize="25sp"
                android:layout_marginTop="5dp"
                android:hint="请输入标签号"/>

            <EditText
                android:id="@+id/et_bqh"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:layout_marginTop="4dp"
                android:layout_marginRight="20dp"
                android:textColor="@color/blue"
                android:inputType="number"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="TID号:"
                android:textColor="@color/tv_Black"
                android:layout_marginLeft="20dp"
                android:textSize="25sp"
                android:layout_marginTop="5dp"/>


            <TextView
                android:id="@+id/tv_tidh"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:layout_marginTop="4dp"
                android:layout_marginRight="20dp"
                android:textSize="15sp"
                android:textColor="@color/tv_Black"/>


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="EPC号:"
                android:textColor="@color/tv_Black"
                android:layout_marginLeft="20dp"
                android:textSize="25sp"
                android:layout_marginTop="5dp"/>


            <TextView
                android:id="@+id/tv_epch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:layout_marginTop="4dp"
                android:layout_marginRight="20dp"
                android:textSize="15sp"
                android:textColor="@color/tv_Black"/>


        </LinearLayout>

    </LinearLayout>



