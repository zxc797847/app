<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >

    <LinearLayout
        android:id="@+id/ll_choice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EDECEC"
        android:orientation="vertical"
        android:paddingBottom="5dp" >

        <LinearLayout
            android:id="@+id/ll_pro_rfid_mgr_shelf_search_head"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#2fa4e7"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="8dp"
                android:src="@drawable/tb_icon_actionbar_back" />

            <TextView
                android:id="@+id/tv_top_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center"
                android:text="初始员工工号"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/iv_pro_rfid_shelf_search_more"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="8dp"
                android:src="@drawable/tb_icon_actionbar_more" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EDECEC"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" >

            <LinearLayout
                android:id="@+id/ll_choice7"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:gravity="left" >

                <TextView
                    android:id="@+id/tv_wms_usercard_readCard"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/btn_bg_selector"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="读卡"
                    android:textColor="@drawable/btn_text_selector" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_choice2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:gravity="left" >

                <TextView
                    android:id="@+id/tv_wms_usercard_epc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="EPC："
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/et_wms_usercard_epc"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@color/help_button_view"
                    android:ems="10"
                    android:enabled="false" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_choice3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:gravity="left" >

                <TextView
                    android:id="@+id/tv_wms_usercard_tid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="TID："
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/et_wms_usercard_tid"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@color/help_button_view"
                    android:ems="10"
                    android:enabled="false" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_choice4"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="10dp"
                android:gravity="left" >

                <TextView
                    android:id="@+id/tv_wms_usercard_yggh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:text="员工工号："
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/et_wms_usercard_yggh"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10" >
                </EditText>
            </LinearLayout>
            
            
            <LinearLayout
                android:id="@+id/ll_choice111"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="10dp"
                android:gravity="left" >

                <TextView
                    android:id="@+id/tv_wms_usercard_text22name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:text="姓名："
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tv_wms_usercard_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/green"
                    android:text=""
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_choice5"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="10dp"
                android:gravity="left" 
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_wms_usercard_check_statusName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="检查状态："
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tv_wms_usercard_check_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="未检查"
                    android:textColor="@color/red"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_choice6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:gravity="left" >

                <TextView
                    android:id="@+id/tv_wms_usercard_save"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/btn_bg_selector"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="保存"
                    android:textColor="@drawable/btn_text_selector" />

                <TextView
                    android:id="@+id/tv_wms_usercard_check"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/btn_bg_selector"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="检验"
                    android:textColor="@drawable/btn_text_selector" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_choice8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:gravity="left" >

            <TextView
                android:id="@+id/tv_warming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:padding="10dp"
                android:text="温馨提示：快捷键“F1”读取RFID卡，快捷键“F2”检验货架号,“左边中间”快捷键实现保存。"
                android:textSize="10dp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>