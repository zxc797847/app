<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ProRfidFind"
    android:background="#FFFFFF" >

    <LinearLayout
        android:id="@+id/ll_choice"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#EDECEC"
        android:orientation="vertical"
        android:paddingBottom="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#2fa4e7"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="8dp"
                android:src="@drawable/tb_icon_actionbar_back" />

            <TextView
                android:id="@+id/tv_top_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center"
                android:text="标签查找"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/iv_pro_rfid_mgr_more"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="8dp"
                android:src="@drawable/tb_icon_actionbar_more" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_choice2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EDECEC"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:gravity="center">


                <!--<Spinner
                    android:id="@+id/spinner_bqh"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="6"/>-->

                <Button
                    android:id="@+id/btn_spinner"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="6"
                    android:background="@color/tv_Gray"
                    android:text="                    ▼"
                    android:textSize="30sp"
                    android:textColor="@color/black"
                    android:gravity="center"/>


                <Button
                    android:id="@+id/btn_rfid_read"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_bg_selector"
                    android:gravity="center"
                    android:text="读 卡"
                    android:textColor="@drawable/btn_text_selector"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btn_rfid_stop"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_bg_selector_red"
                    android:gravity="center"
                    android:text="停 止"
                    android:textColor="@drawable/btn_text_selector"
                    android:textSize="20sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:gravity="left">

                <Button
                    android:id="@+id/btn_rfid_clean"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_bg_selector_red"
                    android:gravity="center"
                    android:text="清 除"
                    android:textColor="@drawable/btn_text_selector"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/ck_open_led"
                    android:layout_width="11dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:checked="true"
                    android:text="点亮LED"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:gravity="left">
                <Button
                    android:id="@+id/btn_find_bq"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_bg_selector"
                    android:gravity="center"
                    android:text="查找标签"
                    android:textColor="@drawable/btn_text_selector"
                    android:textSize="22sp" />
            </LinearLayout>


        </LinearLayout>

        <ListView
            android:id="@+id/listView_pro_rfid_find"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_choice"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:divider="@color/silver"
            android:dividerHeight="3px"
            android:paddingBottom="50dp">

        </ListView>
    </LinearLayout>



</RelativeLayout>