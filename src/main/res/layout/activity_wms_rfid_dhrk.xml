<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dip"
    android:background="#EDECEC"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_pro_rfid_mgr_shelf_search_head"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#2fa4e7"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="8dp"
            android:src="@drawable/tb_icon_actionbar_back" />

        <TextView
            android:id="@+id/tv_top_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:text="材料入库"
            android:textColor="#FFFFFF"
            android:textSize="35sp" />

        <ImageView
            android:id="@+id/iv_pro_rfid_mgr_update_state_more"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="8dp"
            android:src="@drawable/tb_icon_actionbar_more" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/ll_choice"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:orientation="vertical" >
        <!--<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_CPMC_name"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:paddingTop="10dp"
                android:text="订 单 号*："
                android:textColor="@color/black"
                android:textSize="25dp" />

            <Spinner
                android:id="@+id/spinner_CPMC"
                android:layout_width="314dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                />
        </LinearLayout>-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="30dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="left">

            <TextView
                android:id="@+id/tv_clph_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="8dp"
                android:text="材料牌号："
                android:textColor="@color/black"
                android:textSize="25dp" />



            <com.avic.demo.sebeiglzx.view.SpinnerViewPop
                android:id="@+id/spinner_clph"
                android:layout_width="323dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="@drawable/spinnerview_pop_box_bg_drawable" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="10dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="left">

            <TextView
                android:id="@+id/tv_clzj_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="4dp"
                android:text="材料直径："
                android:textColor="@color/black"
                android:textSize="25dp" />



            <com.avic.demo.sebeiglzx.view.SpinnerViewPop
                android:id="@+id/spinner_clzj"
                android:layout_width="323dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="@drawable/spinnerview_pop_box_bg_drawable" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="10dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="left">

            <TextView
                android:id="@+id/tv_clcd_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="4dp"
                android:text="材料长度："
                android:textColor="@color/black"
                android:textSize="25dp" />



            <EditText
                android:id="@+id/et_clcd"
                android:layout_width="323dp"
                android:layout_height="50dp"
                android:layout_margin="2dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_choice5"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_weight="0.32"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:padding="10dp" >

            <TextView
                android:id="@+id/tv_init_save"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/btn_bg_selector"
                android:gravity="center"
                android:text="提交"
                android:textColor="@drawable/btn_text_selector"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>