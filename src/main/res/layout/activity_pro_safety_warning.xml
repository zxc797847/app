<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >


    <LinearLayout
        android:id="@+id/ll_choice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EDECEC"
        android:orientation="vertical"
        android:paddingBottom="1dp" >

        <LinearLayout
            android:id="@+id/ll_pro_rfid_mgr_shelf_search_head"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:background="#2fa4e7"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="8dp"
                android:src="@drawable/tb_icon_actionbar_back" />

            <TextView
                android:id="@+id/tv_top_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center"
                android:text="安全预警"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/iv_pro_inventory_mgr_inventory_more"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="8dp"
                android:src="@drawable/tb_icon_actionbar_more" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_choice2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EDECEC"
            android:orientation="vertical"
            android:paddingBottom="2dp"
            android:paddingTop="2dp" >
            
            <LinearLayout
	            android:id="@+id/ll_choice9"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:background="#EDECEC"
	            android:orientation="vertical"
	            android:paddingBottom="2dp"
	            android:paddingTop="2dp" >


	            <LinearLayout
	                android:id="@+id/ll_choice10"
	                android:layout_width="match_parent"
	                android:layout_height="40dp"
	                android:layout_marginLeft="120dp"
	                android:layout_marginTop="16dp"
	                android:focusable="true"
	                android:focusableInTouchMode="true"
	                android:gravity="left" >
		            <TextView
		                    android:id="@+id/tv_pro_rfid_search"
		                    android:layout_width="180dp"
		                    android:layout_height="wrap_content"
		                    android:layout_marginBottom="2dp"
		                    android:layout_marginRight="8dp"
		                    android:background="@drawable/btn_bg_selector"
		                    android:gravity="center"
		                    android:paddingTop="8dp"
		                    android:paddingBottom="8dp"
		                    android:text="预警计算"
		                    android:textColor="@drawable/btn_text_selector" 
		                    android:textSize="18dp"/>

	                </LinearLayout>
            </LinearLayout>
            
        </LinearLayout>
    </LinearLayout>

    <com.avic.demo.sebeiglzx.utils.scroller.WMSScrollView
        android:id="@+id/wMSScrollView1"
        android:layout_width="400dp"
        android:layout_height="4000dp"
        android:layout_marginTop="92dp" >

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="4000dp">

            <RelativeLayout
                 android:layout_width="match_parent"
                 android:layout_height="4000dp"
                 android:layout_marginTop="2dp"
                 android:layout_weight="0.20" >


				<View
					android:layout_width="match_parent"
					android:layout_height="1dip"
					android:background="#A7A5A5" />
				<!-- 调用外部控件的布局list_item布局。 -->
				<!--<View
					android:layout_width="5dip"
					android:layout_height="fill_parent"
					android:background="#B4B3B3" />-->
				<include
					android:id="@+id/table_title"
					layout="@layout/safety_warning_list_item" />

				<View
					android:layout_width="match_parent"
					android:layout_height="1dip"
					android:background="#686867" />

				<!--<ListView
					android:id="@+id/listView_fkb_info"
					android:layout_width="400dp"
					android:layout_height="130dp"
					android:cacheColorHint="@android:color/transparent"
					android:divider="#B4B3B3"
					android:dividerHeight="1.0dip"
					android:fadingEdge="none"
					android:scrollbars="none" >
				</ListView>-->
				<ListView
					android:id="@+id/listView_fkb_info"
					android:layout_width="388dp"
					android:layout_height="4000dp"
					android:layout_alignParentLeft="true"
					android:layout_marginLeft="2dp"
					android:layout_marginTop="36dp"
					android:divider="@color/silver"
					android:dividerHeight="3px"
					android:paddingBottom="50dp" >
				</ListView>
             </RelativeLayout>
        </HorizontalScrollView>
    </com.avic.demo.sebeiglzx.utils.scroller.WMSScrollView>

</RelativeLayout>