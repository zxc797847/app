<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EDECEC"
        android:orientation="vertical"
        android:paddingBottom="5dp" >

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#2fa4e7"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_top_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center"
                android:text="数据同步"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:gravity="left" >

            <TextView
                android:id="@+id/tv_warming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:padding="10dp"
                android:text="温馨提示：第一步，先点击“数据同步”功能。第二步，点击“下载数据”功能。第三步【该步骤不是必要】，选择同步时间后，再点击“下载数据”。"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:gravity="left" >

            <TextView
                android:id="@+id/tv_upload_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bt_bg_save"
                android:drawableLeft="@drawable/updata"
                android:gravity="center"
                android:padding="6dp"
                android:text="上  传  数  据"
                android:textColor="@drawable/btn_text_selector" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:gravity="left" >

            <TextView
                android:id="@+id/tv_download_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_bg_selector"
                android:drawableLeft="@drawable/down1"
                android:gravity="center"
                android:padding="6dp"
                android:text="下  载  数  据"
                android:textColor="@drawable/btn_text_selector" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:gravity="left" >

            <TextView
                android:id="@+id/tv_up_sbtp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_bg_up"
                android:drawableLeft="@drawable/upphotoshop1"
                android:gravity="center"
                android:padding="6dp"
                android:text="上  传  图  片"
                android:textColor="@drawable/btn_text_selector" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:gravity="left"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/et_time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="" >
            </EditText>

            <TextView
                android:id="@+id/tv_pick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_bg_time"
                android:drawableLeft="@drawable/seletime"
                android:gravity="center"
                android:padding="6dp"
                android:text="时 间 选 择 器"
                android:textColor="@drawable/btn_text_selector" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:gravity="left" >

            <TextView
                android:id="@+id/tv_delete_local_database"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_bg_delet"
                android:drawableLeft="@drawable/up_delet"
                android:gravity="center"
                android:padding="6dp"
                android:text="删 除 本 地 数 据"
                android:textColor="@drawable/btn_text_selector" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:gravity="left" >

            <TextView
                android:id="@+id/tv_test_con"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_bg_ceshi"
                android:drawableLeft="@drawable/wifi"
                android:gravity="center"
                android:padding="6dp"
                android:text="测  试  网  络"
                android:textColor="@drawable/btn_text_selector" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:gravity="left" >

            <TextView
                android:id="@+id/tv_data_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:padding="10dp"
                android:text=""
                android:textSize="10dp" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>